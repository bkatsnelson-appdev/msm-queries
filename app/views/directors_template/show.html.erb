<h1>Director #<%=@director.id%> details</h1>

<a href="/directors"> Go back </a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@director.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=@director.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%=@director.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <%=@director.image%>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=time_ago_in_words(@director.created_at)%> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=time_ago_in_words(@director.updated_at)%> ago
  </dd>

</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
<% @filmography.each do |film|%>
  <tr>
  <td>
    <%=film.id%>
  </td>

  <td>
    <img src="http://robohash.org/<%=film.image%>?set=set4">
  </td>

  <td>
    <%=film.title%>
  </td>

  <td>
    <%=film.year%>
  </td>

  <td>
    <%=Director.where({:id => film.director_id})[0].name%>
  </td>

  <td>
    <a href="/movies/<%=film.id%>">Show details</a>
  </td>
  </tr>
<%end%>
</table>

