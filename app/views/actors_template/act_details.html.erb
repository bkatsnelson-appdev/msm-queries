<h1>Actor #<%=@actor.id%> details</h1>

<a href="/actors"> Go back </a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@actor.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=@actor.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%=@actor.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <%=@actor.image%>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=time_ago_in_words(@actor.created_at)%> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=time_ago_in_words(@actor.updated_at)%> ago
  </dd>

</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
<% @character.each do |set|%>
  <%film = Movie.where({:id => set.movie_id})[0]%>
  <tr>
  <td>
    <%=film.id%>
  </td>

  <td>
    <img src="http://robohash.org/<%=film.image%>?set=set4">
  </td>

  <td>
    <%=film.title%>
  </td>

  <td>
    <%=film.year%>
  </td>

  <td>
    <%=Director.where({:id => film.director_id})[0].name%>
  </td>

  <td>
    <%=set.name%>
  </td>

  <td>
    <a href="/movies/<%=film.id%>">Show details</a>
  </td>
  </tr>
<%end%>
</table>
